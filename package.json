{
    "name": "@cloudflight/style-dictionary-transformer",
    "version": "0.5.1",
    "description": "Cloudflight style dictionary transformer for SCSS",
    "main": "./dist/index.js",
    "author": "Cloudflight GmbH",
    "license": "Apache-2.0",
    "keywords": [
        "style-dictionary",
        "transform"
    ],
    "homepage": "https://github.com/cloudflightio/style-dictionary-transformer",
    "bugs": {
        "url": "https://github.com/cloudflightio/style-dictionary-transformer/issues"
    },
    "publishConfig": {
        "access": "public"
    },
    "files": [
        "dist"
    ],
    "volta": {
        "node": "18.16.0",
        "yarn": "4.0.0-rc.52"
    },
    "scripts": {
        "build": "tsc --project tsconfig.app.json",
        "lint": "eslint . --ignore-path .gitignore && eslint --config .eslintrc.format.js --ignore-path .gitignore .",
        "test": "jest",
        "prepare": "husky install && git update-index --chmod=+x ./.husky/pre-commit",
        "generate-tokens": "ts-node scripts/transform-tokens.mjs",
        "storybook": "storybook dev -p 6006",
        "build-storybook": "storybook build"
    },
    "devDependencies": {
        "@cloudflight/eslint-plugin-typescript": "0.21.0",
        "@jest/globals": "29.7.0",
        "@rushstack/eslint-patch": "1.5.1",
        "@storybook/addon-essentials": "7.4.5",
        "@storybook/addon-interactions": "7.4.5",
        "@storybook/addon-links": "7.4.5",
        "@storybook/blocks": "7.4.5",
        "@storybook/testing-library": "0.2.2",
        "@storybook/vue3": "7.4.5",
        "@storybook/vue3-vite": "7.4.5",
        "@types/node": "18.18.1",
        "@types/tinycolor2": "^1.4.4",
        "eslint": "8.50.0",
        "eslint-plugin-storybook": "0.6.14",
        "husky": "8.0.3",
        "jest": "29.7.0",
        "lint-staged": "14.0.1",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "sass": "1.68.0",
        "storybook": "7.4.5",
        "style-dictionary": "3.8.0",
        "ts-jest": "29.1.1",
        "ts-node": "10.9.1",
        "typescript": "5.2.2",
        "vite": "4.4.9",
        "vue": "3.3.4"
    },
    "lint-staged": {
        "*.ts": "eslint --config .eslintrc.format.js --fix"
    },
    "dependencies": {
        "immer": "^10.0.3",
        "tinycolor2": "1.6.0"
    }
}
