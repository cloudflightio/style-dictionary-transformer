{
    "name": "cloudflight",
    "version": "0.1.0",
    "description": "Utilities for amazon style dictionary",
    "main": "index.js",
    "author": "Cloudflight GmbH",
    "license": "Apache-2.0",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "volta": {
        "node": "18.14.2",
        "yarn": "4.0.0-rc.39"
    },
    "scripts": {
        "build": "yarn workspaces foreach -t run build-package",
        "lint": "eslint .",
        "test": "yarn workspaces foreach run test-package",
        "postinstall": "husky install",
        "publish-workspaces": "node ./scripts/prepare.js && yarn workspaces foreach --no-private npm publish",
        "generate-tokens": "ts-node scripts/transform-tokens.js",
        "storybook": "storybook dev -p 6006",
        "build-storybook": "storybook build"
    },
    "devDependencies": {
        "@cloudflight/eslint-plugin-typescript": "0.9.0",
        "@jest/globals": "29.4.3",
        "@storybook/addon-essentials": "7.0.0-beta.57",
        "@storybook/addon-interactions": "7.0.0-beta.57",
        "@storybook/addon-links": "7.0.0-beta.57",
        "@storybook/blocks": "7.0.0-alpha.8",
        "@storybook/testing-library": "0.0.14-next.1",
        "@storybook/vue3": "7.0.0-beta.57",
        "@storybook/vue3-vite": "7.0.0-beta.57",
        "@types/node": "18.13.0",
        "eslint": "8.33.0",
        "eslint-config-prettier": "8.6.0",
        "eslint-plugin-storybook": "0.6.11",
        "husky": "8.0.3",
        "jest": "29.4.2",
        "lint-staged": "13.1.0",
        "prettier": "2.8.3",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "sass": "1.58.3",
        "storybook": "7.0.0-beta.57",
        "style-dictionary": "3.7.2",
        "ts-jest": "29.0.5",
        "ts-node": "10.9.1",
        "typescript": "4.9.5",
        "vite": "4.1.4",
        "vue": "3.2.47"
    },
    "lint-staged": {
        "**/*": "prettier --write --ignore-unknown"
    }
}
