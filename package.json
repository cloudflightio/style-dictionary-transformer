{
    "name": "cloudflight",
    "version": "0.1.0",
    "description": "Utilities for amazon style dictionary",
    "main": "index.js",
    "author": "Cloudflight GmbH",
    "license": "Apache-2.0",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "volta": {
        "node": "18.14.2",
        "yarn": "4.0.0-rc.39"
    },
    "scripts": {
        "build": "yarn workspaces foreach -t run build-package",
        "lint": "eslint .",
        "test": "yarn workspaces foreach run test-package",
        "postinstall": "husky install",
        "publish-workspaces": "node ./scripts/prepare.js && yarn workspaces foreach --no-private npm publish"
    },
    "devDependencies": {
        "@cloudflight/eslint-plugin-typescript": "0.9.0",
        "eslint": "8.33.0",
        "eslint-config-prettier": "8.6.0",
        "husky": "8.0.3",
        "lint-staged": "13.1.0",
        "prettier": "2.8.3",
        "style-dictionary": "^3.7.2",
        "typescript": "4.9.5"
    },
    "lint-staged": {
        "**/*": "prettier --write --ignore-unknown"
    }
}
